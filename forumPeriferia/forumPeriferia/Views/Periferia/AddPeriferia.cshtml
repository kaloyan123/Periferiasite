<h1>Добави нова част</h1>
<div class="pagespace">

    <form asp-action="Add">

        <div class="form-group">
            <label>Как се казва Устройство?</label>
            <input type="text" class="form-control" placeholder="Enter Content" name="Name">
        </div>

        <select class="form-outline custom-select form-white mb-4" aria-label="Default select example" name="Type">
            <option selected value=""> Какъв вид ще е устраиството? </option>
            <option value="vhodni">Входно</option>
            <option value="ishodni">Изходно</option>
            <option value="vhodnoishodni">Входно-изходно</option>
        </select>

        <label>Попълнете:</label>
        <div class="form-group">
            <label>История</label>
            <textarea type="text" class="form-control" placeholder="Enter Content" name="Istoria" rows="15" cols="50"></textarea>
        </div>
        <div class="form-group">
            <label>Класификация</label>
            <textarea type="text" class="form-control" placeholder="Enter Content" name="Klasificatsia" rows="15" cols="50"></textarea>
        </div>
        <div class="form-group">
            <label>Устройство</label>
            <textarea type="text" class="form-control" placeholder="Enter Content" name="Ustroistvo" rows="15" cols="50"></textarea>
        </div>
        <div class="form-group">
            <label>Процес на деиствие</label>
            <textarea type="text" class="form-control" placeholder="Enter Content" name="ProcesNaDeisvie" rows="15" cols="50"></textarea>
        </div>


        <button type="submit" class="btn btn-primary">Добави</button>

        <a asp-area="" asp-controller="Home" asp-action="Index">
            <button type="button" class="btn btn-secondary">Назад</button>
        </a>

    </form>
</div>